<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/ddzudaqmd/image/upload/v1558632241/coworking_space_xn09ep.png);">
  <div class="container">
    <h1>Space Work</h1>
    <p>Trouvez votre <strong>espace de co-working</strong>.</p>
    <%= link_to "Rechercher", spaces_path, class: "btn btn-light" %>
  </div>
</div>

<div class="container">
  <h2 class="text-center my-3 banner-text">Travaillez où vous le souhaitez</h2>
  <div class="flex cards mt-3">
    <%= link_to spaces_path, class: "card" do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/ddzudaqmd/image/upload/v1558632241/coworking_space_xn09ep.png)">
        <p class="card-title"><%= "Espaces de Co-Working" %></p>
      </div>
    <% end %>
    <%= link_to spaces_path, class: "card" do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/ddzudaqmd/image/upload/v1558894249/ieyxmztlbadtf3qyn5zu.jpg)">
        <p class="card-title"><%= "Cafés" %></p>
      </div>
    <% end %>
    <%= link_to spaces_path, class: "card" do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/ddzudaqmd/image/upload/v1558894247/nrzqwrjftkwuttvexga3.jpg)">
        <p class="card-title"><%= "Bureaux d'entreprises" %></p>
      </div>
    <% end %>
  </div>
  <h2 class="text-center my-3 banner-text">Nos coups de cœur à Paris</h2>
  <div class="flex cards mt-3">
  <% @spaces.each do |space| %>
    <%= link_to space_path(space), class: "card" do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path space.photo, height: 300, width: 400, crop: :fill %>')">
        <p class="card-title"><%= space.title %></p>
      </div>
    <% end %>
  <% end %>
  </div>
</div>




