<div class="small-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/ddzudaqmd/image/upload/v1558882271/l2g2mjn8ldbvppo6g4hb.png);">
  <div class="container">
    <h1>Space Work</h1>
    <p>Trouvez votre <strong>espace de co-working</strong>.</p>

 <!-- search bar   -->
<%= form_tag spaces_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a space"
      %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="flex cards mt-3 ">
  <% @spaces.each do |space| %>
    <%= link_to space_path(space), class: "card-1" do %>
      <div class="card-container">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path space.photo, height: 300, width: 400, crop: :fill %>')">
          <p class="card-title"><%= space.title %></p>
        </div>
        <div class="d-flex justify-content-between">
          <p class="text-card m-1"><%= "#{space.price} â‚¬ / jours" %></p>
          <div class="stars m-1">
            <!-- star review -->
            <% if space.number_of_empty_star == 5 %>
              <%= "" %>
            <% else %>
              <!-- full star -->
              <% space.number_of_full_star.times do %>
                <i class='fas fa-star'></i>
              <% end %>
              <!-- half star -->
              <% space.number_of_half_star.times do %>
                <i class='fas fa-star-half-alt'></i>
              <% end %>
              <!-- empty star -->
              <% space.number_of_empty_star.times do %>
                <i class='far fa-star'></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
