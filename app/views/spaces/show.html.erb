<div class="container">

  <div class="card-product">


    <div class="card-a" style="background-image: url('<%= cl_image_path @space.photo, height: 600, width: 900, crop: :fill %>')">

    </div>


    <div class="card-product-infos">


      <h1><%= @space.title %></h1>
      <p><%= @space.availabilities %>

      </p>
      <p><%= @space.localisation %>

      </p>
      <p><strong>Prix à la journée:</strong>
          <%= "#{@space.price} €" %>
      </p>

      <p><strong>Type d'espace:</strong>
         <%= @space.space_type %>
      </p>

      <p> <strong>Places disponibles:</strong>
          <%= @space.capacity %>
      </p>

    </div>
  </div>
  <div class="d-flex justify-content-between mt-1 card-info">
    <div class="map-container" style="flex: 0 0 62%";>
      <div
        id="map"
        style="height: 400px;"
        data-markers="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <div class="d-flex justify-content-around mt-1">
        <div>
          <%= link_to "Contacter cet Espace", new_space_path, class: "btn btn-primary btn-lg" %>
        </div>
        <div>
          <%= link_to "Retourner aux espaces", spaces_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
    <div class="reservation-option" style="flex: 0 0 38%">
      <h2>Options de réservation</h2>
      <%= simple_form_for [@space, @reservation], :url => {:controller => "reservations", :action => "preview"}  do |f| %>
        <%= f.input :period, label: "Dates", placeholder: "Sélectionnez des dates", as: :string, input_html: { id: "datepicker" } %>
        <%= f.input :number_worker, label: "Nombre de places" %>
        <input type="hidden" value="<%= @space.id %>" name="space_id">
        <%= f.button :submit, "Continuer", class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>




