
<!-- cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill  -->


<div class="container">

  <div class="card-product">


    <div class="card-a" style="background-image: url('<%= cl_image_path @space.photo, height: 600, width: 900, crop: :fill %>')">

    </div>

    <div class="card-product-infos">
      <h1><%= @space.title %></h1>
      <p><%= @space.availabilities %>

      </p>
      <p><%= @space.localisation %>

      </p>
      <p><strong>Prix à la journée:</strong>
          <%= "#{@space.price} €" %>
      </p>

      <p><strong>Type d'espace:</strong>
         <%= @space.space_type %>
      </p>

      <p> <strong>Places disponibles:</strong>
          <%= @space.capacity %>
      </p>
    </div>
  </div>
  <div class="d-flex justify-content-between mt-1 card-info">
    <div>
      <%= link_to "Contacter cet Espace", new_space_path, class: "btn btn-primary btn-lg" %>


    </div>
    <div class="reservation-option">
      <h2>Options de réservation</h2>
      <%= simple_form_for [@space, @reservation] do |f| %>
        <%= f.input :start_day %>
        <%= f.input :end_day %>
        <%= f.input :number_worker %>
        <%= f.button :submit, "Valider vos options", class: "btn-primary" %>
      <% end %>
    </div>
    </div>
    <div
      id="map"
      style="width: 40%;
      height: 400px;"
      data-markers="<%= @marker.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>



